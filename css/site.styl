@import "kouto-swiss"
@import "helpers"
@import "fonts"
@import "genericons"

meyer-reset()
box-sizing-reset()
normalize()

// GRID OF 12 90px COLUMNS WITH 16px GUTTER
$cols = 24
$col = 32px
$gutter = 14px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
  display: flex
.col
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
  min-height: 1px

for col in 1..$cols
  .s{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

@media screen and (min-width: 601px)

  for col in 1..$cols
    .m{col}
      width: ( col * $col ) + ( ( col - 1 ) * $gutter )

@media screen and (min-width: 993px)

  for col in 1..$cols
    .l{col}
      width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// FLUID COLS
.percent-col
  float: left
  box-sizing: content-box
$pcols = 10
for pcol in 1..$pcols
  .s-into-{pcol}
    width: ( 100% / pcol )

@media screen and (min-width: 601px)

  for pcol in 1..$pcols
    .m-into-{pcol}
      width: ( 100% / pcol )

@media screen and (min-width: 993px)

  for pcol in 1..$pcols
    .l-into-{pcol}
      width: ( 100% / pcol )

// VARIABLES

$golden-ratio = 1.61803398875

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 13px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$color-black-soft = rgb(14, 14, 14)
$color-white-soft = rgb(253, 253, 253)
$color-red = rgb(191, 37, 47)

// TYPOGRAPHY

html
  font-family: sans-serif

body
  padding: $margin-mid 0
  font-family: 'Gudea'
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

.font-weight-medium
  font-weight: 500

.font-italic
  font-style: italic

h1, h2, h3, h4, h5, h6
  line-height: $font-leading-basic
  font-weight: bold

h1
  font-size: 3em

h2
  font-size: 2em

h3
  font-size: 1.5em

p
  margin-bottom: 1em


// LINKS

a, a:active, a:visited
  color:inherit
  transition:opacity .2s
  text-decoration: none

  &:hover
    color: $color-red

// qtranslate x
.language-chooser 
  a
    color: $color-red
    opacity: 0.5

  .active
    a
      opacity: 1

// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

img
  max-width: 100%
  height: auto

// STRUCTURE

// HEADER

.header-drawer
  display: none

#header
  display: flex
  margin-bottom: $margin-mid

.menu-principal-container
  flex-grow: 1

#menu-principal
  display: flex
  flex-direction: row
  justify-content: space-between

.menu-item.menu-item-has-children > a
  font-weight: bold

// MAIN SIDEBAR
.main-sidebar
  list-style: none
  
  & > li
    margin-bottom: $margin-basic
// COPY
.copy
  line-height: 1.8

  img
    display: block
    margin: 0 auto
    margin-bottom: $margin-basic
    max-height: 85vh

// ARCHIVE
.archive
  .row
    margin-bottom: $margin-basic

  .grid
    h3
      font-size: 1.3em

// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))
  html
    width: 100%
